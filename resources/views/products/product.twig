{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-4">
            <img src="{{ product.image }}" alt="{{ product.title }} image" class="thumbnail img-responsive">
        </div>
        <div class="col-md-8">
            {% if product.inStock() %}
              {% if product.hasLowStock() %}
                  <span class="label label-warning">Low Stock</span>
              {% else %}
                  <span class="label label-success">In Stock</span>
              {% endif %}
            {% endif %}
            {% if product.outOfStock() %}
                <span class="label label-danger">No Stock</span>
            {% endif %}

            <h3>{{ product.title() }}</h3>
            <p>{{ product.description }}</p>

            <form action="{{ path_for('cart.add', { slug: product.slug, quantity:1}) }}" method="post" class="form-inline">
                <select name="quantity" class="form-control input-sm" onchange="this.form.submit()>
                    {% for num in 1..product.stock %}
                        <option value="{{ num }}"{% if num == product.quantity %} selected="selected"{% endif %}>{{ num }}</option>
                    {% endfor %}
                </select>
            </form>

            {% if product.inStock() %}
                <a href="{{ path_for('cart.add', { slug: product.slug, quantity: 1 }) }}" class="btn btn-default btn-sm">Add to cart</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
